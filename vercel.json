{
  "buildCommand": "echo 'Static files ready'",
  "outputDirectory": "./",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/probe",
      "destination": "/api/probe"
    },
    {
      "source": "/status(.*)",
      "destination": "/api/status"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}
